<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/alarmlist_cView"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:id="@+id/alarmlist_lLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgalarm"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/ic_alarm" />

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:orientation="vertical"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_marginTop="10dp"
                         android:id="@+id/txtdesc"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/timeNull"
                         android:textColor="@color/colorWhite"
                         android:textSize="28sp" />

                     <TextView
                         android:id="@+id/alarmlist_time"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/timeNull"
                         android:textColor="@color/colorWhite"
                         android:textSize="15sp" />
                 </LinearLayout>


                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/alarmlist_weather_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:materialIcon="weather_cloudy"
                        app:materialIconColor="@color/colorRed_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alarmlist_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sunday"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/monday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/tuesday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/wednesday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/thursday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/friday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/saturday"
                        android:visibility="gone"

                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/alarmlist_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/alarmlist_lLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>