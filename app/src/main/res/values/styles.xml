<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gayahuruf</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ASlistTheme" parent="ASlistBase">
        <item name="android:fontFamily">@font/gayahuruf</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <item name="android:textColorSecondary">@color/theme_secondary_text</item>

        <item name="android:buttonStyle">@style/CustomButton</item>

        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <!-- Base application theme. -->
    <style name="ASlistBase" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="CustomButton" parent="android:style/Widget.Button">
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="mySpinnerStyle" parent="Widget.AppCompat.ListView.Menu">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/theme_divider</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="ToolBarTheme" parent="ASlistTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/theme_primary_text</item>

    </style>

    <style name="ToolBarEditText" parent="Widget.AppCompat.EditText" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/theme_toolbar_hint</item>
        <item name="android:textSize">@dimen/toolbar_edit_description_text_size</item>
    </style>

    <style name="ToolBarTitleEditText" parent="@android:style/Widget.Holo.DropDownItem.Spinner" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/theme_toolbar_hint</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="FloatingActionButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>

    </style>

    <style name="TextView" parent="AppTheme">
        <item name="android:textColor">@color/TextColor.DarkGray</item>
        <item name="android:textSize">@dimen/Text.Standard</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
    <style name="TextView.Header" parent="TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/Text.VeryLarge</item>
    </style>

    <style name="TextView.EmptyState" parent="TextView">
        <item name="android:textColor">@color/TextColor.White</item>
        <item name="android:textSize">@dimen/Text.EmptyState</item>
        <item name="android:layout_margin">@dimen/Margin.Double</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textColor">@color/TextColor.Black</item>
        <item name="android:textSize">@dimen/Text.Small</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:textColor">@color/TextColor.Black</item>
        <item name="android:textColorHint">@color/TextColor.Gray</item>
        <item name="android:layout_marginRight">@dimen/Margin.Standard</item>
        <item name="android:layout_marginLeft">@dimen/Margin.Standard</item>
        <item name="android:layout_marginTop">@dimen/Margin.Half</item>
        <item name="android:layout_marginBottom">@dimen/Margin.Half</item>
        <item name="android:textSize">@dimen/Text.Standard</item>
    </style>

    <style name="DeleteButton" parent="AppTheme">
        <item name="android:textColor">@color/TextColor.DarkGray</item>
        <item name="android:textSize">@dimen/Text.Standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider.Horizontal" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Divider.Width</item>
        <item name="android:background">@color/Divider</item>
    </style>

    <style name="AlertDialogSettings" parent="AlertDialog.AppCompat">
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorCustom</item>
        <item name="android:colorAccent">@color/colorRed_500</item>

        <item name="android:fontFamily">@font/gayahuruf</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/colorRed_500</item>
        <item name="android:colorBackground">@color/colorCustom</item>
        <item name="android:fontFamily">@font/gayahuruf</item>

    </style>

    <style name="TimePickerDialog" parent="Theme.AppCompat.DayNight.Dialog">
    </style>
</resources>
